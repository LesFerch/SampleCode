<!DOCTYPE html>
<html>
<head>
<meta http-equiv="x-ua-compatible" content="ie=9">
<HTA:Application 
Caption=No
Scroll=No
Border=Thin
InnerBorder=No
>
<script language="VBScript">

Sub window_OnLoad
  Img01.Src = "https://i.stack.imgur.com/MybMA.png"
  DispWidth = 1024
  DispHeight = 257
  Img01.Width = DispWidth
  Img01.Height = DispHeight
  CenterWindow DispWidth+16, DispHeight+16
  Window.SetTimeOut "Quit()", 3000
End Sub

Sub Quit
  Window.Close
End Sub

Sub CenterWindow(x,y)
  Window.ResizeTo x, y 
  Window.MoveTo (screen.availWidth-x)/2, (screen.availHeight-y)/2
End Sub

</script>
</head>
<body>
  <img id=Img01>
</body>
</html>